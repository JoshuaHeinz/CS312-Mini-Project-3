//creates blog
<form action="/blogs/create" method="POST">
    //asks for a tite
    <input type="text" name="title" placeholder="Blog Title" required>
    //asks for blog content
    <textarea name="body" placeholder="Blog Content" required></textarea>
    //submits
    <button type="submit">Post</button>
  </form>
  
  //formatting for blogs
  <ul>
    <% blogs.forEach(blog => { %>
      <li><h3><%= blog.title %></h3><p><%= blog.body %></p></li>
    <% }) %>
  </ul>
  